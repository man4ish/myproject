<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Plan RNA-Seq</display-name>
    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>true</param-value>
    </context-param>
       <servlet>
        <servlet-name>BrowseAnnotate</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>edu.cornell.qatarmed.planrnaseq.BrowseAndAnnotate</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Vaadin</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>edu.cornell.qatarmed.planrnaseq.PlanRNAseq</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AnnotateServlet</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>edu.cornell.qatarmed.planrnaseq.AnnotateRNAseq</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AnnotateServletJPA</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>edu.cornell.qatarmed.planrnaseq.AnnotateRNAseq1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AnnotateServletSQL</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>edu.cornell.qatarmed.planrnaseq.AnnotateRNAseqSQL</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SimpleLoginServlet</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <param-name>UI</param-name>
            <param-value>edu.cornell.qatarmed.planrnaseq.SimpleLoginUI</param-value>
        </init-param>
    </servlet>
  
    <servlet>
        <servlet-name>pkservlet</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <description>Vaadin UI to display</description>
            <param-name>UI</param-name>
            <param-value>com.vaadin.tutorial.addressbook.AddressbookUI</param-value>
        </init-param>
    </servlet>
     <servlet-mapping>
        <servlet-name>BrowseAnnotate</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Vaadin</servlet-name>
        <url-pattern>/VAADIN/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnnotateServlet</servlet-name>
        <url-pattern>/annotate/*</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>AnnotateServletJPA</servlet-name>
        <url-pattern>/annotate/jpa/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnnotateServletSQL</servlet-name>
        <url-pattern>/old/*</url-pattern>
    </servlet-mapping>
  
       <servlet-mapping>
        <servlet-name>SimpleLoginServlet</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pkservlet</servlet-name>
        <url-pattern>/pk/*</url-pattern>
    </servlet-mapping>
</web-app>
